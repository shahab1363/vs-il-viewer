<UserControl x:Class="VSILViewer.ILViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" ToolBarTray.IsLocked="True">
            <ComboBox x:Name="ViewModeCombo" Width="120" SelectedIndex="1" SelectionChanged="ViewModeCombo_SelectionChanged"
                      ToolTip="Switch between IL and decompiled C# view">
                <ComboBoxItem Content="IL"/>
                <ComboBoxItem Content="Decompiled C#"/>
            </ComboBox>
            <Separator/>
            <ComboBox x:Name="RefreshModeCombo" Width="80" SelectedIndex="0" SelectionChanged="RefreshModeCombo_SelectionChanged"
                      ToolTip="Auto: follows caret position. Manual: use Refresh button.">
                <ComboBoxItem Content="Auto"/>
                <ComboBoxItem Content="Manual"/>
            </ComboBox>
            <Separator/>
            <ComboBox x:Name="LineWrapCombo" Width="80" SelectedIndex="0" SelectionChanged="LineWrapCombo_SelectionChanged"
                      ToolTip="Toggle word wrap in the code editor">
                <ComboBoxItem Content="Wrap"/>
                <ComboBoxItem Content="No Wrap"/>
            </ComboBox>
            <Separator/>
            <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click" Padding="8,2"
                    ToolTip="Force reload of current method/class (F5)"/>
            <Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click" Padding="8,2"
                    ToolTip="Clear the viewer content"/>
            <Button x:Name="CopyButton" Content="Copy" Click="CopyButton_Click" Padding="8,2"
                    ToolTip="Copy all content to clipboard (Ctrl+Shift+C)"/>
            <Separator/>
            <ToggleButton x:Name="CallTreeToggle" Content="Call Tree" Click="CallTreeToggle_Click"
                          Padding="8,2" IsChecked="False"
                          ToolTip="Toggle call hierarchy sidebar"/>
            <Separator/>
            <TextBox x:Name="SearchBox" Width="160" VerticalContentAlignment="Center"
                     FontSize="11" Padding="2,1"
                     ToolTip="Search in code (Enter = next, Shift+Enter = previous, Esc = close)"
                     KeyDown="SearchBox_KeyDown"
                     GotFocus="SearchBox_GotFocus"/>
        </ToolBar>

        <!-- File/Class Header -->
        <Border Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Padding="8,4">
            <TextBlock x:Name="HeaderText" Text="No file open" FontWeight="SemiBold"/>
        </Border>

        <!-- Breadcrumb Navigation Bar -->
        <Border x:Name="BreadcrumbBar" Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                Padding="4,2" Visibility="Collapsed">
            <DockPanel>
                <Button x:Name="BackButton" DockPanel.Dock="Left" Content="&#x2190;"
                        Click="BackButton_Click" Padding="6,2" Margin="0,0,2,0"
                        VerticalAlignment="Center" FontSize="11" ToolTip="Navigate back (Alt+Left)"/>
                <Button x:Name="ForwardButton" DockPanel.Dock="Left" Content="&#x2192;"
                        Click="ForwardButton_Click" Padding="6,2" Margin="0,0,4,0"
                        VerticalAlignment="Center" FontSize="11" ToolTip="Navigate forward (Alt+Right)"
                        IsEnabled="False"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="BreadcrumbItems">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main Content Area with optional Call Hierarchy sidebar -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="CallTreeColumn" Width="0"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Call Hierarchy Tree -->
            <Border x:Name="CallTreePanel" Grid.Column="0" Visibility="Collapsed"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Padding="6,3">
                        <TextBlock Text="Call Hierarchy" FontWeight="SemiBold" FontSize="11"/>
                    </Border>
                    <TreeView x:Name="CallTree" Grid.Row="1" BorderThickness="0"
                              FontFamily="Consolas" FontSize="11"
                              SelectedItemChanged="CallTree_SelectedItemChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="True"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Splitter between call tree and editor -->
            <GridSplitter x:Name="CallTreeSplitter" Grid.Column="1" Width="4"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"
                          Background="Transparent" Visibility="Collapsed"
                          ShowsPreview="True"/>

            <!-- Code Editor -->
            <avalonEdit:TextEditor x:Name="CodeEditor"
                                   Grid.Column="2"
                                   FontFamily="Consolas"
                                   FontSize="13"
                                   ShowLineNumbers="True"
                                   IsReadOnly="True"
                                   WordWrap="True"
                                   VerticalScrollBarVisibility="Auto"
                                   HorizontalScrollBarVisibility="Auto"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Padding="8,4">
            <DockPanel>
                <TextBlock x:Name="StatusText" Text="Ready" DockPanel.Dock="Left"/>
                <TextBlock x:Name="HintText" Text="Ctrl+Click to navigate | F5 to refresh"
                           DockPanel.Dock="Right" HorizontalAlignment="Right"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                           FontSize="11"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
